    <div class="form">
        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data", name = "monFormulaire", id="form1" }))
        {
            <div id="bloc1" class="bloc">
                <div class="titreBloc">
                    <div class="numero"><div>1</div></div>
                    <div class="titre">Mon Profil</div>
                    <div class=""><hr /></div>
