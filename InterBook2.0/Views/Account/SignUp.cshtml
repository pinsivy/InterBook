                            <div class="left">@Html.LabelFor(x => x.Nom, SignUp.Nom, new { @for = "nom" }) :</div>
                            <div class="right">@Html.TextBoxFor(x => x.Nom, new { @class = "inputQuery", Name = "nom" })</div>
                        </div>
                        @*
                            AGE
                        *@
