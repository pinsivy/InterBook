@using InterBook2._0.Views.Dashboard.App_LocalResources;
@using System.Web.Optimization
@model InterBook2._0.Models.DashboardModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@Styles.Render("~/Media/css/dashboard")
<link href="~/Media/css/Dashboard.css" rel="stylesheet" />

<section class="container">

    @Html.Partial("_MenuProfil")

    <div class="panelDroite right">
        <h1>Devenez membre Premium</h1>
        @*
            PAYPAL
        *@
        <br /><br /><br />
        <h2>Paypal</h2><br />
        <div class="form">
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                <input type="hidden" name="cmd" value="_s-xclick">
                <input type="hidden" name="hosted_button_id" value="VATPHDXB78LRY">
                <input type="image" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_subscribeCC_LG.gif" border="0" name="submit" alt="PayPal - la solution de paiement en ligne la plus simple et la plus sécurisée !">
                <img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
            </form>
        </div>
        @*
            ALLOPASS
        *@
        <br /><br /><br /><br />
        <h2>Allopass</h2><br />
        <div class="form">
            <script type="text/javascript" src="https://payment.allopass.com//subscribe/button.apu?ids=324591&amp;idd=1422392&amp;lang=fr&amp;merchant_subscriber_reference=@(InterBook2._0.BLL.SessionManager.Current.Util.uid)"></script>
            <noscript>
                <a href="https://payment.allopass.com/subscribe/subscribe.apu?ids=324591&amp;idd=1422392" style="border:0">
                    <img src="https://payment.allopass.com/static/subscribe/button/fr/162x56.png" style="border:0" alt="Abonnez-vous maintenant !" />
                </a>
            </noscript>
        </div>
        @*
            CB
        *@
        <br /><br /><br /><br />
        <h2>CB</h2><br />
        <div class="form">
            @Html.Raw(ViewBag.contentHtmlCB)
        </div>
    </div>
    <div class="clear"></div>
</section>
