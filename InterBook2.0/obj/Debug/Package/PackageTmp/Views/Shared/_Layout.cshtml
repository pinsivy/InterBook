@using System.Web.Optimization
@using InterBook2._0.Views.Shared.App_LocalResources;
@model InterBook2._0.Models.ModelBase

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" style="height: 100%;margin: 0;padding: 0;">
<!--<![endif]-->
<!--[if gte IE 9]><style type="text/css">.gradient {filter: none;}</style><![endif]-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.ico" />
    <!--Global Css-->
    @Styles.Render("~/Media/css/base")

    <!--Page Css-->
    @RenderSection("styles", required: false)

    <!--Global JS-->
    @Styles.Render("~/Media/js/base")
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <!--Modernizr-->
    @Scripts.Render("~/Media/js/modernizr")
</head>
<body>
    <header class="page-row">
        <div class=" header">
        <div id="desktop" class="container">
            <div class="menu left">
                <a href="/" id="logoHeader"><img src="~/Media/img/commun/fr-FR/logoHeader.png" /></a>
            </div>
            <div id="rsHeader" class="menu left">
                <div>
                    <a href="#" id="googleHeader"><img src="~/Media/img/commun/fr-FR/googleHeader.png" /></a>
                    <a href="#" id="fbHeader"><img src="~/Media/img/commun/fr-FR/fbHeader.png" /></a>
                </div>
            </div>
            <div id="headerDroite" class="menu right">
                <span><a href='/How'>Comment ça marche ?</a></span>
                @if (Model.SessionObject.Util != null && Model.SessionObject.Util.Util_Postal != null)
                {
                    <span><a href='/dashboard'>@Model.SessionObject.Util.Util_Postal.prenom</a></span>
                }
                @if (Model.SessionObject.Util != null && Model.SessionObject.Util.Util_Email != null)
                {
                    <span><a href='/dashboard'>@Model.SessionObject.Util.Util_Email.email</a></span>
                }
                else
                {

                    <div>
                        <a href="#" id="tabletteHeader"><img src="~/Media/img/commun/fr-FR/tabletteHeader.png" /></a>
                    </div>
                    <div>
                        <a href="#" id="seConnecter">Se connecter</a>
                    </div>

                }
            </div>
        </div>
        </div>
        @if (Model.SessionObject.Util == null)
        {
            <div id="connexionPart">
                @Html.Partial("_Login");
            </div>
        }
    </header>
    <div id="page" class="page-row page-row-expanded">
        @RenderBody()
    </div>
    <footer class="page-row">
        <div class="container menu">
            <div id="interbookFooter">
                InterBook &reg; 2014
            </div>
            <div id="mentionsFooter">
                <a href="#" class="mentionsFooter">Mentions Légales</a>
                <a href="#" class="mentionsFooter">CGU</a>
                <a href="#" class="mentionsFooter">FAQ</a>
                <a href="#" class="mentionsFooter">A propos</a>
                <a href="#" class="mentionsFooter">Contact</a>
            </div>
            <div id="logoFooter">
                <img src="~/Media/img/commun/fr-FR/logoFooter.png" />
            </div>
        </div>
    </footer>
    <script src="~/Media/js/easing.js"></script>
    <script>
        jQuery(function ($) {

            $('#seConnecter').on('click', function () {
                if ($('a.close').length == 0) {
                $('#connexionPart').append('<a href="#" class="close"><span id="fermePop">X<span></a>').show().animate({ 'top': '+=300px' }, 800);
                //Apparition du fond - .css({'filter' : 'alpha(opacity=80)'}) pour corriger les bogues d'anciennes versions de IE
                $('body').append('<div id="fade"></div>');
                $('#fade').css({ 'filter': 'alpha(opacity=80)' }).fadeIn();
                }
                return false;
            });

            //Close Popups and Fade Layer
            $('body').on('click', 'a.close, #fade', function () { //Au clic sur le body...
                $('#fade').fadeOut().remove();
                $('#connexionPart').animate({ 'top': '-=300px' }, 800, function () { $('#connexionPart').hide(); $('a.close').remove(); });
                //$('#connexionPart').slideUp(2000, 'easeOutBack');
                
                return false;
            });
        });
    </script>
    </body>
</html>
